layout("/system/public/aside.html",{title:'header'}){} %>
<script type="text/javascript"></script>

<!-- BEGIN WRAPPER  -->
<div class="editalbeWrap">
	<section id="main-content">
		<!-- BEGIN WRAPPER  -->
		<section class="wrapper site-min-height">
			<section class="panel">
				<header class="panel-heading">
					<span class="label label-primary">广告管理</span> <span
						class="tools pull-right"> <a href="javascript:;"
						class="fa fa-chevron-down"></a> <a href="javascript:;"
						class="fa fa-times"></a>
					</span>
				</header>
				<div class="panel-body">
					<div class="adv-table editable-table ">
						<div class="clearfix">
							<form class="form-inline" role="form" name="searchForm">
								<div class="form-group">
									<input type="text" class="form-control" name="关键字"
										placeholder="请输入关键字">
								</div>
								<button type="submit" name="search" class="btn btn-success">检索</button>
								<button type="submit" name="reset" class="btn btn-success">重置检索</button>
								<div class="btn-group">
									<a href="#editable-sample_new" name="new-life-table"
										data-toggle="modal" class="btn btn-success green"> 新增 <i
										class="fa fa-plus"></i>
									</a>
								</div>
							</form>
							</br>
						</div>
						<div class="space15"></div>
						<table class="table table-striped table-hover table-bordered"
							id="life-tableList">
							<thead>
								<tr>
									<th width="5%" class="center"><input type="checkbox"
										class="checkall" /></th>
									<th width="5%" class="hidden-phone">序号</th>
									<th width="5%" class="hidden-phone">创建人</th>
									<th width="6%" class="hidden-phone">图片</th>
									<th width="5%" class="hidden-phone">链接地址</th>
									<th width="10%" class="hidden-phone">创建时间</th>
									<th width="10%" class="hidden-phone">状态</th>
									<th width="10%" class="hidden-phone">省</th>
									<th width="10%" class="hidden-phone">市</th>
									<th width="10%" class="hidden-phone">区</th>
									<th width="14%" class="hidden-phone">操作</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</section>
		</section>
		<!-- END WRAPPER  -->
	</section>
</div>

<script src="${ctxPath}/static/system/olive/all/js/jquery.form.js"></script>
<script
	src="${ctxPath}/static/system/olive/all/js/jquery.validate.min.js"></script>
<script
	src="${ctxPath}/static/system/olive/all/assets/data-tables/jquery.dataTables.js"></script>
<script
	src="${ctxPath}/static/system/olive/all/assets/data-tables/DT_bootstrap.js"></script>
<script src="${ctxPath}/static/web/system/advertise/js/config_table.js"></script>

<script type="text/javascript">
jQuery(document).ready(function() {
		layui.use('layer', function() {
			var layer = layui.layer;
			//新建帐号
			jQuery('a[name=new-life-table]').on('click', function(e) {
				e.preventDefault();
				var lifeId = jQuery(this).attr('data-id');
				parent.layer.open({
					type : 2,
					title : '新增广告',
					area : [ '800px', '400px' ],
					content : '../advertise/add-cfg-page.html?lifeId=' + lifeId,
					end : function() {

					}
				});
			});
		});
		lifeTable.init();//初始化表格
	});
	
	
</script>
