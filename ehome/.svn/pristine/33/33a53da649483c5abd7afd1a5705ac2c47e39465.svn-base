   <script src="${ctxPath}/static/system/olive/all/assets/data-tables/jquery.dataTables.js"></script><!-- DATATABLE JS  -->
    <script src="${ctxPath}/static/system/olive/all/assets/data-tables/DT_bootstrap.js"></script><!-- DATATABLE JS  -->
    <script src="${ctxPath}/static/system/olive/all/js/editable-table.js" ></script>
    
    <script type="text/javascript">
    var pagedata = ${pageInfo}; 
    new Vue({
        el:'.editalbeWrap',
        data:{
        	tablelist:pagedata.list,
        },
        filters:{
        	time:function(value) {
          	   var date = new Date(value);
         	   Y = date.getFullYear(),
         	   m = date.getMonth() + 1,
         	   d = date.getDate(),
         	   H = date.getHours(),
         	   i = date.getMinutes(),
         	   s = date.getSeconds();
         	   if (m < 10) {
         	    m = '0' + m;
         	   }
         	   if (d < 10) {
         	    d = '0' + d;
         	   }
         	   if (H < 10) {
         	    H = '0' + H;
         	   }
         	   if (i < 10) {
         	    i = '0' + i;
         	   }
         	   if (s < 10) {
         	    s = '0' + s;
         	   }
         	   var t = Y+'-'+m+'-'+d+' '+H+':'+i+':'+s;
         	   return t;
         	   },
         	  status: function(value) {
         		 switch(value){
         		 case 0:
         			 return '否';
         			 break;
         		 case 1:
         			 return '是';
         			 break;
         		 }
        		 return '';
        	   },
         	  status2: function(value) {
         		 switch(value){
         		 case 0:
         			 return '不显示';
         			 break;
         		 case 1:
         			 return '显示'
         		 }
        		 return '';
        	   }
        }
      });
    
    function search(){
		var key=$('#nav-search-input').val();			
			$("#Form").submit();			
	}
    
    function add(){
        var userId = jQuery(this).attr('data-id');
        parent.layer.open({
            type: 2,
            title: '添加话题',
            area: ['700px', '750px'],
            content:'../user/add-user-page.html?userId='+userId,
            end:function(){
     
            }
        });
    }
	
	//删除
	function del(tobj){
		if(confirm("你确认删除吗?")){
			$.ajax({
				url:'deleteSpace?id='+tobj.id,
				type:'get',
				success:function(data){
//	         var obj = eval('(' + data + ')');
					if(data==1){
						alert("删除成功");
						var tb = tobj.parentNode.parentNode;
						tb.parentNode.removeChild(tb);
					}else{
						alert("删除失败");
					}
				}
			});
		}else{
			
		}
	}
    
    function selectAll(){
		 var checklist = document.getElementsByName ("ids");
		   if(document.getElementById("zcheckbox").checked){
		   for(var i=0;i<checklist.length;i++){
		      checklist[i].checked = 1;
		   } 
		 }else{
		  for(var j=0;j<checklist.length;j++){
		     checklist[j].checked = 0;
		  }
		 }
	}
    </script>
